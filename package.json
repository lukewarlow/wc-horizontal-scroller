      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --declaration --emitDeclarationOnly --outDir dist"
  },
  "repository": "https://github.com/lukewarlow/wc-horizontal-scroller.git",
  "author": "Luke Warlow",
  "license": "MIT",
  "dependencies": {
    "tailwind-scrollbar-utilities": "^0.1.0",
    "tailwindcss": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.21",
    "typescript": "5.0.4",
    "vite": "^4.2.1"
  }
}
