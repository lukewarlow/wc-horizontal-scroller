{
  "name": "wc-horizontal-scroller",
  "version": "0.1.2",
  "description": "Web component for a horizontal scroller",
  "keywords": [
    "web",
    "component",
    "front-end",
    "web-components",
    "web-component",
    "webcomponents",
    "webcomponent",
    "web components",
    "web component",
    "carousel",
    "scroller",
    "horizontal-scroller",
    "horizontal scroller",
    "TypeScript"
  ],
  "type": "module",
  "side-effects": false,
  "files": ["dist"],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
